   */
  async compactMessages(): Promise<void> {
    if (this.messages.length <= 6) {
      // æ¶ˆæ¯æ•°é‡å°‘äº6æ¡æ—¶ä¸éœ€è¦å‹ç¼©
      return;
    }

    Logger.info('ChatViewModel', 'å¼€å§‹å‹ç¼©æ¶ˆæ¯ï¼Œå…ˆåœæ­¢æ‰€æœ‰è¯­éŸ³æ’­æ”¾');
    
