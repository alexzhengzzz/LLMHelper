    }

    const deltaX = event.offsetX;
    const currentTime = Date.now();
    
    // æ£€æµ‹æ»‘åŠ¨æ–¹å‘
    const currentDirection = deltaX > 5 ? 'right' : deltaX < -5 ? 'left' : 'none';
    
    // æ–¹å‘å˜åŒ–é˜²æŠ–ï¼šå¦‚æœæ–¹å‘å˜åŒ–è¿‡å¿«ï¼Œå¿½ç•¥æ­¤æ¬¡æ›´æ–°
    if (this.swipeDirection !== 'none' && 
