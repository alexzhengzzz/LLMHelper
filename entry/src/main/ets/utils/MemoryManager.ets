  async getActiveMemories(): Promise<MemoryFragment[]> {
    try {
      const memories = await this.getAllMemories();
      const activeMemories = memories.filter(m => m.isActive);

      // æŒ‰é‡è¦æ€§å’Œä½¿ç”¨é¢‘ç‡æ’åº
